    <form action="/api/heroes/agregar" method="POST">
      <div class="mb-4">
        <label class="block mb-1">Nombre del Superhéroe</label>
        <input name="nombreSuperHeroe" class="bg-white text-black border border-gray-300 rounded w-full py-2 px-3 focus:outline-none focus:ring-2 focus:ring-yellow-400">
      </div>

      <div class="mb-4">
        <label class="block mb-1">Nombre Real</label>
        <input name="nombreReal" class="bg-white text-black border border-gray-300 rounded w-full py-2 px-3">
      </div>

      <div class="mb-4">
        <label class="block mb-1">Edad</label>
        <input type="number" name="edad" class="bg-white text-black border border-gray-300 rounded w-full py-2 px-3">
      </div>

      <div class="mb-4">
        <label class="block mb-1">Planeta de Origen</label>
        <input name="planetaOrigen" class="bg-white text-black border border-gray-300 rounded w-full py-2 px-3">
      </div>

      <div class="mb-4">
        <label class="block mb-1">Debilidad</label>
        <input name="debilidad" class="bg-white text-black border border-gray-300 rounded w-full py-2 px-3">
      </div>

      <div class="mb-4">
        <label class="block mb-1">Poderes (separados por coma)</label>
        <input name="poderes" class="bg-white text-black border border-gray-300 rounded w-full py-2 px-3">
      </div>

      <div class="mb-4">
        <label class="block mb-1">Aliados (separados por coma)</label>
        <input name="aliados" class="bg-white text-black border border-gray-300 rounded w-full py-2 px-3">
      </div>

      <div class="mb-4">
        <label class="block mb-1">Enemigos (separados por coma)</label>
        <input name="enemigos" class="bg-white text-black border border-gray-300 rounded w-full py-2 px-3">
      </div>

      <div class="mb-6">
        <label class="block mb-1">Creador</label>
        <input name="creador" class="bg-white text-black border border-gray-300 rounded w-full py-2 px-3">
      </div>

      <div class="flex items-center justify-between">
        <button type="submit" class="bg-yellow-500 hover:bg-yellow-400 text-gray-900 font-bold py-2 px-4 rounded">
          Agregar Superhéroe
        </button>
        <a href="/api/dashboard" class="ml-4 inline-block bg-gray-700 hover:bg-gray-600 text-yellow-300 font-bold py-2 px-4 rounded">
          Cancelar
        </a>
      </div>
    </form>
  </div>

